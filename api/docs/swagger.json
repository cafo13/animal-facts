        "title": "Animal Facts API",
        "termsOfService": "https://animalfact.app/terms",
        "contact": {
            "name": "Animal Facts API",
            "url": "https://animalfacts.app/support",
            "email": "support@animalfacts.app"
        },
        "license": {
